<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLoginFlow.Pages.ProfilePage"
             Title="ProfilePage">
    <VerticalStackLayout>
        <Label 
        Text="Profile"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
        <Label Text="{Binding Username}" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
        <Label Text="{Binding Password}" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
        <Button Text="Logout"
            Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>